{% extends 'base.html.twig' %}

{% block title %}Admin {% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col m6 push-m3 s12">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title center primary-color">Se Connecter</span>
                        <form method="POST" action="{{ path('admin_login_form') }}">
                            <div class="input-field">
                                <input type="text" autofocus name="username" id="username" class="validate"
                                       placeholder="Pseudo ou E-Mail">
                                <label for="username" class="active">Nom d'utilisateur</label>
                            </div>
                            <div class="input-field">
                                <input type="password" name="password" id="password" class="validate"
                                       placeholder="Mot de Passe">
                                <label for="password" class="active">Mot de Passe</label>
                            </div>
                            <div class="center">
                                <button class="btn waves-effect waves-light" type="submit" name="action">Connexion
                                    <i class="fa fa-sign-in-alt"></i>
                                </button>
                            </div>
                        </form>
                    </div>
